{
  "name": "big-brother",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Add your linter here'",
    "migrate": "cat migrations/001_initial.sql | docker-compose exec -T postgres psql $DATABASE_URL",
    "migrate:create": "echo 'Add migration creation script'",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker build -t analytics-api .",
    "benchmark": "k6 run tests/benchmark/load-test.js",
    "healthcheck": "curl -f http://localhost:3000/api/health || exit 1",
    "setup": "chmod +x scripts/start.sh && ./scripts/start.sh"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "tsx": "^4.20.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/websocket": "^11.2.0",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.3",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "postgres-pool": "^10.1.21",
    "ws": "^8.18.3",
    "zod": "^4.0.17"
  }
}
